/* pages/details/details.wxss */
page{position: relative;background: #F5F6F8}
.header{
    width: 100%;height: 128rpx;background: #FFE745;
    position: fixed;left: 0;top: 0;z-index: 99
}
.phX-header{height: 160rpx;}
.andr-header{height: 152rpx;}
.header-icons{
    width: 160rpx;height: 60rpx;background: rgba(255, 255, 255, 0.3);
    display: flex;align-items: center;margin-left: 40rpx;padding-left: 24rpx;border-radius: 30rpx;margin-top: 56rpx;
}
.pxh-header-icons{margin-top: 84rpx}
.andr-header-icons{margin-top: 76rpx}
.back-icon{width: 38rpx;height: 38rpx;margin-right: 56rpx;}
.home-icon{width: 38rpx;height: 38rpx;}
.d-content{
    /* margin-top: 130rpx; */
    position: fixed;left: 0;top: 0;width: 100%;z-index: 98;height: 100%
}
.img-item{width: 100%;display: block;min-height: 60rpx;}
.cont-botom{
    position: absolute;bottom: 0;left: 0;width: 100%;min-height: 20rpx;background: rgba(255, 255, 255, 0.25);z-index: 99;
    display: flex;justify-content: space-between;align-items: center;padding: 30rpx 40rpx;max-height: 90rpx;overflow: hidden;
}
.d-title{
    padding-left: 40rpx;color: #EEB934;font-size: 30rpx;margin-bottom: 8rpx;
}
.d-tag{display: inline-block;margin-right: 30rpx;color: #FD697B;font-size: 28rpx;}
/* .tag-view{margin: 0 0 0 40rpx;} */
.swiper-item{width: 100%;height: 100%;overflow: hidden;}
.gif-operations{
  display: flex;justify-content: space-between;
  /* margin: 0 40rpx 0 0; */
}
button{padding: 0;border-radius: 0;background: none}
button::after{border: none}
.operate-btn{
  width: 40rpx;height: 40rpx;
}
.operate-btn:first-child{margin-right: 44rpx;}
.operate-btn-img{display: block;width: 100%;height: 100%}
.sw-block{position: relative;width: 100%;height: 100%;}
.img-outer-conts{position: relative;width: 100%;height: 100%;overflow: hidden;display: flex;align-items: center;}
